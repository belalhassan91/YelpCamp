<%- include('partials/header'); %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1 class="display-4">Hello Campground</h1>
            <p>View our hand picked of campgrounds from all over the world</p>
            <a class="btn btn-primary btn-lg" href="/campgrounds/new"> Add New Campground</a>
        </div>
    </header>
    <div class="row d-flex">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-sm-6 col-md-3">
                <div class="card">
                    <img src=<%= campground.image %> class="card-img-top">
                    <h5 class="card-title text-center"> <%= campground.name%> </h5>
                </div>
            </div>
        <% }) %>
    </div>
</div>
<%- include('partials/footer'); %>