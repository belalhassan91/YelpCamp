<%- include('partials/header'); %>
<div class="container">
    <h1 class="mx-auto text-center">Create a New Campground</h1>
    <div class="mx-auto" style="width:30%">
        <form action="/campgrounds" method="POST">
            <div class="form-group row">
                <input class="col-12" type="text" name="name" placeholder="name">
            </div>
            <div class="form-group row">
                <input class="col-12" type="text" name="image" placeholder="image url">
            </div>
            <div class="form-group row">
                <input class="col-12" type="text" name="description" placeholder="description">
            </div>
            <div class="form-group row">
                <button class="col-12 btn-primary btn-lg">Submit</button>
            </div>
        </form>
        <a href="/campgrounds">Go back</a>
    </div>
</div>
<%- include('partials/footer'); %>